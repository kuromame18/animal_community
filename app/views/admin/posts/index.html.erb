<div class='container'>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-3">
      <h4 id="heading">投稿一覧</h4>
      投稿数の多いタグ...
      <% @tags.each do |tag| %>
        <%= link_to admin_tagsearches_search_path(tag: tag.name) do %>
          <%= tag.name %>
          <%= "(#{tag.posts.count})" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12 col-md-6 col-lg-3 mb-4">
        <div class="card h-100">
          <%= post_image(post, size = "253x200 card-img-top img-fluid") %>
          <div class="card-body">
            <div class="card-title">
              <strong>Title</strong><br />
              <%= post.title %><br />
              <strong>Tag</strong><br />
              <i class="tag"><%= post.tags.map(&:name).join(',') %></i>
              <div id="favorite_btn_<%= post.id %>" >
                <%= render 'admin/favorites/btn', post: post %>
              </div>
              <div><%= render 'admin/comments/counter', post: post %></div>
            </div>
            <%= link_to "詳細", admin_post_path(post.id), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    <% end %>
  <div class="row">
    <div class="col-12">
      <div class="pagination">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>



