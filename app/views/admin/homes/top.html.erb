<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h4 id="heading">会員一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.user_name %></td>
            <td class="<%= user.status ? 'text-muted' : 'text-success' %>">
              <strong><%= user.status ? '退会' : '有効' %></strong>
            </td>
            <td><%= link_to "詳細", admin_user_path(user.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
  </div>
</div>
