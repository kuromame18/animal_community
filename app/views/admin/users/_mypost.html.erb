<div class="container">
  <% if @posts.exists? %>
    <div class="row">
      <% posts.each do |post| %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <%= post_image(post, size = "253x200") %>
            <div class="card-body">
              <div class="card-title">
                <strong>Title</strong><br />
                <%= post.title %><br />
                <strong>Tag</strong><br />
                <i class="tag"><%= post.tags.map(&:name).join(',') %></i>
                <div id="favorite_btn_<%= post.id %>" >
                  <%= render 'public/favorites/btn', post: post %>
                </div>
              </div>
              <%= link_to "詳細", admin_post_path(post.id), class: "btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-1 mx-auto">
        <div class="pagination">
          <%= paginate posts %>
        </div>
      </div>
    </div>
  <% else %>
  <div class="row">
    <div class="col-md-3 mx-auto">
      <h4>投稿はありません。</h4>
    </div>
  </div>
  <% end %>
</div>