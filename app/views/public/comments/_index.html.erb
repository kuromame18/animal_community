<% post.comments.each do |comment| %>
  <div class="post-comment">
    <%= image_tag comment.user.get_profile_image(75,75) %>
    <%= comment.comment %>
    <% if user_signed_in? && (current_user == comment.user || current_user.admin?) %>
      <%= link_to 'コメントを削除', post_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    <% end %><br />
    (<%= link_to user_path(comment.user) do %>
        <%= comment.user.name %>
    <% end %>)
  </div>
<% end %>
