<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h3 id="heading">新規投稿</h3>
      <%= form_with model: @post do |f| %>
        <div>
          <%= f.label :Image %><br />
          <%= f.file_field :post_image, accept: "image/*" %>
        </div>
        <div>
          <%= f.label :Title %><br />
          <%= f.text_field :title, size: 50 %>
        </div>
        <div>
          <%= f.label :Content %><br />
          <%= f.text_area :content, size: '50x5' %>
        </div>
        <div>
          <%= f.label "Tag (,で区切ると複数タグ登録できます)" %>
          <%= f.text_field :name, value: @tag %>
        </div>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>
