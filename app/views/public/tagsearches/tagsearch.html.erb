<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h5 id=heading><%= @model %><i class="fa-solid fa-paw"></i>検索結果 "<%= @word %>"<i class="fa-solid fa-paw"></i></h5>
    </div>
  </div>
  <% if @posts.exists? %>
    <div class="row">
      <% @posts.each do |post| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <%= post_image(post, size = "253x200") %>
          <div class="card-body">
            <div class="card-title">
              <strong><i class="fa-solid fa-paw"></i>Title</strong><br />
              <%= post.title %><br />
              <strong><i class="fa-solid fa-paw"></i>Tag</strong><br />
              <i class="tag"><%= post.tags.map(&:name).join(',') %></i>
              <div id="favorite_btn_<%= post.id %>" >
                <%= render 'public/favorites/btn', post:post %>
              </div>
            </div>
            <%= link_to "詳細", post_path(post.id), class: "btn btn-success" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% else %>
    <div class="col-md-3 mx-auto">
      <h4>投稿はありません</h4>
    </div>
  </div>
  <% end %>
</div>
