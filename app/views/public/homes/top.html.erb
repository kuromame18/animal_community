<div class="container">
  <div class="top-background">
    <h1 id="top-title">ようこそ！アニマルコミュニティへ！</h1>
  </div>

  <div class="row">
    <h4 id="top-newposts">新着</h4>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-md-3 mb-4">
      <div class="card">
        <%= image_tag post.get_post_image(200,200), class: "card-img-top img-fluid" %>
        <div class="card-body">
          <div class="card-title">
            Title<br />
            <%= post.title %><br />
            Tag<br />
            <i class="tag">
              <i class="fa-solid fa-tag"></i>
              <%= post.tags.map(&:name).join(',') %>
            </i>
            <div id="favorite_btn_<%= post.id %>" >
               <%= render 'public/favorites/btn', post:post %>
            </div>
          </div>
          <%= link_to "詳細", post_path(post.id), class: "btn btn-success" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="top-index">
    <%= link_to '投稿一覧へ', posts_path %>
  </div>
</div>

