<div class="container">
  <div class="top-background">
    <div class="col-12">
      <h1 id="top-title">ようこそ！アニマルコミュニティへ！</h1>
    </div>
  </div>

  <div class="row">
    <h4 id="top-newposts"><i class="fa-solid fa-dog fa-bounce">新着投稿</i></h4>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="card h-100">
        <%= post_image(post, size = "253x200 card-img-top img-fluid") %>
        <div class="card-body">
          <div class="card-title">
            <strong><i class="fa-solid fa-paw"></i>Title</strong><br />
            <%= post.title %><br />
            <strong><i class="fa-solid fa-paw"></i>Tag</strong><br />
            <i class="tag">
              <i class="fa-solid fa-tag"></i>
              <%= post.tags.map(&:name).join(',') %>
            </i>
            <div id="favorite_btn_<%= post.id %>" >
               <%= render 'public/favorites/btn', post:post %>
            </div>
          </div>
          <%= link_to "詳細", post_path(post.id), class: "btn btn-success" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="top-index">
    <i class="fa-solid fa-paw fa-beat"><%= link_to '投稿一覧へ', posts_path %></i>
  </div>
</div>

