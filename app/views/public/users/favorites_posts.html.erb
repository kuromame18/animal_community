<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 id="heading"><i class="fa-solid fa-paw"></i>いいねした投稿<i class="fa-solid fa-paw"></i></h4>
      <div class="row">
        <% @favorites_posts.each do |post| %>
          <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
              <%= post_image(post, size = "253x200 card-img-top img-fluid") %>
              <div class="card-body">
                <div class="card-title">
                  <i class="fa-solid fa-paw"></i><strong>Title</strong><br />
                  <%= post.title %><br />
                  <i class="fa-solid fa-paw"></i><strong>Tag</strong><br />
                  <i class="tag"><%= post.tags.map(&:name).join(',') %></i>
                  <div id="favorite_btn_<%= post.id %>" >
                    <%= render 'public/favorites/btn', post: post %>
                  </div>
                  <div><%= render 'public/comments/counter', post: post %></div>
                </div>
                <%= link_to "詳細", post_path(post.id), class: "btn btn-success" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-md-1 mx-auto">
          <div class="pagination">
            <%= paginate @favorites_posts %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>