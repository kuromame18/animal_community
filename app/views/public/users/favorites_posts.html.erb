<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 id="heading">いいねした投稿</h4>
      <div class="row">
        <% @favorites_posts.each do |post| %>
          <div class="col-md-3 mb-4">
            <div class="card">
              <%= image_tag post.get_post_image(300, 300), class: "card-img-top img-fluid" %>
              <div class="card-body">
                <div class="card-title">
                  Title<br />
                  <%= post.title %><br />
                  Tag<br />
                  <i class="tag"><%= post.tags.map(&:name).join(',') %></i>
                  <div id="favorite_btn_<%= post.id %>" >
                    <%= render 'public/favorites/btn', post: post %>
                  </div>
                  <div><%= render 'public/comments/counter', post: post %></div>
                </div>
                <%= link_to "詳細", post_path(post.id), class: "btn btn-success" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-md-1 mx-auto">
          <div class="pagination">
            <%= paginate @favorites_posts %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>