<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3 id="heading">マイページ</h3>

      <table class="table">
        <tr>
          <th width="200">Name（氏名）</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th width="200">Email</th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th width="200">Profile Image</th>
          <td><%= user_image(current_user, size = "200x150") %></td>
        </tr>
        <tr>
          <th width="200">UserName</th>
          <td><%= current_user.user_name %></td>
        </tr>
        <tr>
          <th width="200">Introduction</th>
          <td><%= current_user.introduction %></td>
        </tr>
      </table>

      <% unless @user.guest_user? %>
      <div class="button">
        <%= link_to "編集", users_mypage_edit_path, class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
