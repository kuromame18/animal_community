<div class="container">
  <div class="row">

    <div class="col-md-8 mx-auto">
      <%= render 'public/users/user_info' %>
    </div>

    <div class="col-md-8 mx-auto">
      <h4 id="heading">会員一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
          <tr>
            <td><%= image_tag users.get_profile_image(100,100) %></td>
            <td><%= users.user_name %></td>
            <td><%= link_to "詳細", user_path(users.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
  </div>
</div>

