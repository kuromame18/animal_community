<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>新規会員登録</h2>

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :Name（氏名） %><br />
          <%= f.text_field :name, autofocus: true, size: 60 %>
        </div>

        <div class="field">
          <%= f.label :UserName（アカウント名） %><br />
          <%= f.text_field :user_name, size: 60 %>
        </div>

        <div class="field">
          <%= f.label :Email %><br />
          <%= f.email_field :email, autocomplete: "email", size: 60 %>
        </div>

        <div class="field">
          <%= f.label :Password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", size: 60 %>
        </div>

        <div class="field">
          <%= f.label :Password（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 60 %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= link_to "ゲストログイン（閲覧用）", public_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
